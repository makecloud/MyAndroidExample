<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liuyihui.playvideodemo.useAndroidVideoView.VideoViewActivity">

    <Button
        android:id="@+id/startPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_parent"
        android:onClick="startPlay"
        android:text="启动播放" />


    <Button
        android:id="@+id/getInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_parent"
        android:layout_toRightOf="@id/startPlay"
        android:onClick="getInfo"
        android:text="getInfo" />

    <Button
        android:id="@+id/seekTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_parent"
        android:layout_toRightOf="@id/getInfo"
        android:onClick="seekTo"
        android:text="seekTo" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent">

    </FrameLayout>


</RelativeLayout>
