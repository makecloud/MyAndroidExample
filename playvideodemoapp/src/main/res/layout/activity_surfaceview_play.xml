<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liuyihui.playvideodemo.useSurfaceView.SurfaceViewPlayActivity">

    <SurfaceView
        android:id="@+id/sufaceView"
        android:layout_centerInParent="true"
        android:layout_width="500px"
        android:layout_height="500px"/>

    <Button
        android:id="@+id/dd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="useAnewPlayerPrepareNewPathOnSurfaceView"
        android:textAllCaps="false"
        android:text="newPlayerPrepare" />

    <Button
        android:layout_toRightOf="@+id/dd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startButtonClick"
        android:textAllCaps="false"
        android:text="start" />


</RelativeLayout>
