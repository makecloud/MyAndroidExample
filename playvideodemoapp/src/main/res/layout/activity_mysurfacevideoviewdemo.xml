<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liuyihui.playvideodemo.MySurfaceVideoViewDemoActivity">

    <com.liuyihui.playvideodemo.customerView.MyIjkSurfaceVideoView
        android:id="@+id/sufaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/startPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startPlay"
            android:text="开始播放" />


        <Button
            android:id="@+id/stopPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="stopPlay"
            android:text="停止播放" />


        <Button
            android:id="@+id/pausePlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="pausePlay"
            android:text="暂停播放" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="seekTo"
            android:text="seekTo" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getInfo"
            android:text="getInfo" />
    </LinearLayout>

</RelativeLayout>
