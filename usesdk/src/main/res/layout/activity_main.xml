<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liuyihui.myexample.usesdk.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启动sdk的activity播放广告"/>

        <Button
            android:id="@+id/start_play1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启动1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启动sdk的悬浮窗播放广告"/>

        <Button
            android:id="@+id/start_play2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启动2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="指定view, 让sdk在指定view播放广告"/>

        <Button
            android:id="@+id/start_play3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启动3"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
