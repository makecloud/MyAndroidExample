<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liuyihui.networkcontrol.MainActivity">

    <Button
        android:id="@+id/open_hotspot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开关热点" />

    <Button
        android:id="@+id/connect_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="连接wifi" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="testGeneralDownload"
        android:text="普通方式下载" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="testPlayerSustainDown"
        android:text="播控内的端点续传下载" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="testSystemProcessDownload"
        android:text="使用系统下载服务下载" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="testSocketTransmit"
        android:text="socket传送" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="callHttpUrl"
        android:text="调用getMyInfo接口" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="testConcat"
        android:text="测试双源" />

</LinearLayout>
