<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liuyihui.client.myexample.demo21_framelayout_hierarchy.Example21Activity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addViewToFrameLayout"
        android:text="添加View"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/upon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="bringChildViewToFront"
        android:text="bringToFront"
        android:textAllCaps="false" />

    <FrameLayout
        android:id="@+id/containerFramelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azure">


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="第一个button" />


    </FrameLayout>

</LinearLayout>
